<fieldset>
  <legend>Votre Jeu</legend>
  <% if @editions %>
    <p><%= form.label :edition_id, "Edition" %><br />
    <%= form.collection_select :edition_id, @editions, :id, :select_name %></p>
  <% end %>
  <p><%= form.label :origin, "Origine"  %><br />
  <%= form.text_field :origin, :size => 50 %></p>
  <p><%= form.label :price, "Prix d'achat" %><br />
  <%= form.text_field :price %></p>
  <p><%= form.label :transdate, "Date d'acquisition" %><br />
  <%= form.date_select :transdate %></p>
</fieldset>

<fieldset>
	<legend>Status du jeux</legend>
	<ul class="horizontal clear">
    <li><%= form.label :shield, "Proteg&eacute;" %>&nbsp;<%= form.check_box :shield %></li>
    <li><%= form.label :rules, "Regles" %>&nbsp;<%= form.check_box :rules %></li>
    <li><%= form.label :cheatsheet, "Aides" %>&nbsp;<%= form.check_box :cheatsheet %></li>
  </ul><br />
	<p><%= form.label :parties_count, "nombre de parties" %><br />
  <span class='tips'>Attention cela a juste une valeur informative pour votre ludotheque. 
    Ces parties n'exsiteront pas dans le calendrier des parties.</span><br />
	<%= form.text_field :parties_count, :size => 4 %></p>
</fieldset>