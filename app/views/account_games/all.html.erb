<h3>Rechercher un jeu</h3>

<% form_for "search" , :url => search_account_games_path, :method => :post, :html => {:id => "ludo-search"} do |f| %>
    <fieldset>
      <legend>Simple</legend>
  		Contenant <%= f.label :tags_mode_or, "un des tags: " %><%= f.radio_button :tags_mode, :or, :checked=> true, :class => "trigger" %>
  		<%= f.label :tags_mode_and, "tous les tags: " %><%= f.radio_button :tags_mode, :and, :class => "trigger" %>		
  		<%= f.text_field :tags,  :class => "important" %>
  		<div class="auto_complete" id="tags_lookup_auto_complete"></div> 
  		<%= f.label :players, "Pour " %>
  		<%= f.text_field :players, :size => 2, :class => "important trigger" %> <strong>Joueurs</strong>
      <br />
      Des Categories : <%= f.select :cat1, [["Aucune", -1]] + Game::Target %> ou <%= f.select :cat2, [["Aucune", -1]] + Game::Target %>
	</fieldset>
	<fieldset>
	  <legend>Avanc&eacute;e</legend>
	    Filtrer sur les jeux : <%= f.label :mode_played, "Joué" %><%= f.radio_button :mode, :played %> ou
	    <%= f.label :mode_not_played, "non joué" %><%= f.radio_button :mode, :not_played %> 
	  </fieldset>
	<div></div>

<% end %>


<div id="search-results">
    <table class="sortable">
      <thead>
        <th class="nosort"></th>
        <th class="nosort span-11">Jeux</th>
        <th class="nosort span-2">Cat&eacute;gorie</th>
        <th class="nosort span-10">tags</th>
        <th class="nosort span-1">Joueur</th>
      </thead>
      <tbody id="results">
        <% unless @ag.empty? %>
          <%= render :partial => "search_result", :collection => @ag %>
        <% else %>
          <%= render :partial => "search_result_empty" %>
        <% end %>
      </tbody>
    </table>
</div>



<% content_for :subnav do %>
	<%= render :partial => "subnav" %>
<% end %>