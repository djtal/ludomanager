<h3>Vos jeux de A a Z</h3>

<% if @account_games.size > 0 %>

<div class="pagination clear">
  <span><%= link_to "Tous", account_games_path %></span>
    <% ("A".."Z").each do |letter| %>
      <%= link_for_first_letter letter, :account_games_path %>
    <% end %>
</div>


<div id="account_games_list">
  <table class="sortable">
    <thead>
      <tr>
        <th class="span-8">Jeux</th>
        <th class="span-3">Public</th>
        <th class="span-4 align-right account_game nosort"><strong>x</strong><em>(derniere partie)</em></th>
        <th class="span-2 last"></th>
      </tr>
    </thead>
    <tbody>
      <%= render @account_games %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4">
          <ul class="horizontal clear right">
            <li><span class="ss_sprite ss_folder"></span>Total : <span class="empty"><%= @all %></span></li>
            <li><%= link_to("Recent : #{@recent}", all_account_games_path(:search => {:mode => "recent"}), :class => "ss_sprite ss_coffee") %></li>
            <li><%= link_to "Non jouÃ©e : #{@no_played}", all_account_games_path(:search => {:mode => "not_played"}), :class => "ss_sprite ss_warning" %></li>
          </ul>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

<%= will_paginate @accout_games %>

<% else %>
  <p class="empty">Vous ne possedez encore aucun jeux.</p>
<% end %>


<% content_for :newsbox do %>
  
  <% render_widget "Repartition de vos jeux", :sprite => "ss_pie_chart" do %>
    <div id="ac_games_piechart" style="width: 200px; height:200px; left:40px;">
      
    </div>
    <div id="chart-legend"></div>
  <% end %>
  

<% end %>

<% content_for :subnav do %>
	<%= render :partial => "subnav" %>
<% end %>