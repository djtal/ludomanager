<% form_tag session_path do -%>

<fieldset>
  <p><%= label_tag :login, "Nom d'utilisateur" %><br />
  <%= text_field_tag 'login', {}, :class => "important" %></p>

  <p><%= label_tag :password, "Votre mot de passe" %><br/>
  <%= password_field_tag 'password', {}, :class => "important" %></p>

  <p><%= label_tag :remember_me, "Se souvenir de moi" %>
  <%= check_box_tag 'remember_me' %></p>

</fieldset>

<%= submit_or_back_to games_path, "Annuler", :submit_text => "Me connecter" %>



<% end -%>
