<% render_widget "Parties  du #{l @party.created_at.to_date}" do %>
  <ul class="strip">
    <% @parties.each do |p| %>
      <li class="<%= @party.id == p.id ? "selected" : "" %>">
        <div class="right">
          <%= p.players.count %> / <%= p.game.max_player %>
        </div>
        <%= link_to p.game.name, p.players.count > 0 ? edit_party_player_path(p, p)  : new_party_player_path(p),
                    :class => p.players.count > 0 ? "party ss_sprite ss_pencil" : "party ss_sprite ss_add" %>
      </li>
    <% end %>
  </ul>
<% end  %>