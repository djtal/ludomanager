<% content_for:head do %>
	<title>Les auteurs</title>
<% end %>

<h3>Les auteurs</h3>

<div class="pagination clear">
  <span><%= link_to "Tous", authors_path %></span>
    <% ("A".."Z").each do |letter| %>
      <%= link_for_first_letter letter, :authors_path %>
    <% end %>
</div>

<table class="sortable">
  <thead>
    <tr>
      <th class="span-6 nosort">Nom Prenom</th>
      <th class="span-<%= logged_in? ? "9" : "11" %> nosort"></th>
      
      <% if logged_in? %>
        <th class="span-2 nosort">Gerer</th>
      <% end %>
      <th class="nosort center">Nb Jeux</th>
    </tr>
  </thead>
  <tbody>
    <%= render :partial => @authors %>
  </tbody>
</table>

<div class="page-nav">
  <%= will_paginate @authors %>
</div>

<% content_for :newsbox do %>

<% end %>
