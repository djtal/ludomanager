<fieldset>
  <legend>Les bases</legend>
  <p><%= f.label :name, "Nom :" %><br />
  <%= f.text_field :name, :class => "important" %></p>
  <p><%= f.label :surname, "Prenom" %><br />
  <%= f.text_field :surname, :class => "important" %></p>
  <p><%= f.label :lang, "Pays" %><br />
  <%= f.select :lang, Ludomanager::COUNTRIES.collect{ |arr| [arr[0], arr[1]]} %></p>
  <p><%= f.label :homepage, "Site internet" %><br />
  <%= f.text_field :homepage, :size => 60 %></p>
</fieldset>