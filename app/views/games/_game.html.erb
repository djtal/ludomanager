<% div_for game, :class => "autohide clear" do %>
	<h3>
	  <div class="right"><%= langs_flag_for(game) %></div>
	  <%= link_to game.name, game_path(game) %> 
	  <span class="small"><%= other_name_for(game, game.editions) %></span>
	</h3>
  <div class="clear content">
    <div class="column span-3 last"><%= game_box_for(game, :size =>"70x70", :class => "mini") %></div>
  	<div class="column span-14 last">
    	  <div class="block">
    	    <h4>Description</h4>
    	    <% if !game.description.blank? %>
      	    <%=truncate(h(game.description), :length => 215, :omission => "... " + link_to("Voir la suite", game_path(game))) %>
      	  <% else %>
      	      <span class="empty">Ce jeux ne possede aucun description actuellement</span>
      	  <% end %>
    	  </div>
        <div class="block">
          <h4>Les tags</h4>
          <%= game_tags_links game %>
        </div>
  	</div>
  </div>
  <%= render 'account_managment', :game => game %>
<% end %>
