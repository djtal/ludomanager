<h3>
  <%= @game.name %>
  <span class="small"><%= other_name_for(@game, @editions) %></span>
</h3>

<% div_for @game, :class => "clear" do %>
	<div class="column span-4 last">
	 <%= game_box_for(@game, :size =>"90x90", :class => "box") %>
	 <div class="block">
	   <h4><%= @game.name %> en bref</h4>
   	 <ul>
   	    <li class="ss_sprite ss_date">Sortie en : <span class="meta"><%= @editions.size > 0 &&  @editions.first.published_at ? @editions.first.published_at.year : "----" %></span></li>
   			<li class="ss_sprite ss_clock ">Dur&eacute;e : <span class="meta"><%= @game.time_str %></span></li>
   			<li class="ss_sprite ss_user">Joueurs : <span class="meta"><%= @game.min_player %> a <%= @game.max_player %></span></li>
   		  <li class="ss_sprite ss_group">Public : <span class="meta"><%= @game.target_str.downcase %></span></li>
   	</ul>
	 </div>
	</div>
	<div class="column span-13 last">
	  <ul class="tabsContainer clear" id="gameTabs">
	   <li class="tabs active"><a href="#overview">Pr&eacute;sentation</a></li>
	   <li class="tabs"><a href="#editions">&Eacute;ditions</a></li>
	   <li class="tabs"><a href="#links">Divers</a></li>
	  </ul>
	  <div id ="overview" class="tabsBody">
	    	<div class="block">
	    	  <h4>Descrition</h4>
      	  <% if !@game.description.blank? %>
      	    <%= @game.description %>
      	  <% else %>
      	      <span class="empty">Ce jeux ne possede aucun description actuellement</span>
      	  <% end %>
      	</div>
      	<div class="block">
      	 <h4>Les auteurs</h4>
      	 <%= authors_links(@game) %>
      	</div>
      	<div class="block">
      	 <h4>Les Tags</h4>
      	 <%= game_tags_links @game %>
      	</div>
	  </div>
	  <div id="editions" class="tabsBody">
    		<%= render :partial => "editions/show" %>
	  </div>
    <div id="links", class="tabsBody">
      <div class="block">
        <h4>Ils en parlent aussi...</h4>
        Sa fiche sur TricTrac : <%= external_game_link(@game) %>
      </div>
    </div>

	</div>
	<%= render :partial => 'account_managment', :locals => {:game => @game} %>
<% end %>


<% content_for :newsbox do %>

  <% render_widget "Administration" do %>
    <ul>
      <li><%= link_to "Editer la fiche", edit_game_path(@game), :class => "ss_sprite ss_page_white_edit" %></li>
      <li><%= link_to "Supprimer la fiche", game_path(@game), 
              :method => :delete, :class => "ss_sprite ss_page_white_delete" %></li>
      <li><%= manage_authors_link(@game) %></li>
      <li><%= link_to "Ajouter une edition", new_game_edition_path(@game), :class => "ss_sprite ss_page_white_add" %></li>
      <li><%= link_to "Retour a la liste de jeux", games_path(), :class => "ss_sprite ss_arrow_undo" %></li>
    </ul>
  <% end %>

  <% render :layout => "layouts/widget", :locals => {:title => "Statistiques"} do %>
		<span class="flash"><%= pluralize(@game.account_games.size, "membre</span> a", "membres</span> ont") %>
		ce jeu dans leurs ludotheque.
    <br />
		Nos membres ont jou√©s un total de 
		<span class='flash'><%= pluralize(@game.parties.count, "partie</span>", "parties</span>") %> de ce jeu.
	<% end %>
	
<% end %>


<% content_for :subnav do %>
	<%= render :partial => "subnav" %>
<% end %>