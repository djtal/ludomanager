<%= render :partial => 'manage', :locals => {:game => @game} %>
<h3><%= @game.name %></h3>

<% div_for @game, :class => "clear" do %>
	<div class="column span-3">
	 <%= game_box_for(@game, :size =>"80x80") %>
	</div>
	<div class="column last span-13">
    	<p>
    	  <% if !@game.description.blank? %>
    	    <%= @game.description %>
    	  <% else %>
    	      <span class="empty">Ce jeux ne possede aucun description actuellement</span>
    	  <% end %>
    	</p>
		<ul class="meta">
		  <li>Public : <span class="flash"><%= @game.target_str %></span></li>
			<li><%= nb_player_tag(@game) %></li>
			<li>Moyenne TricTrac: <span class="hide average"><%= @game.average %></span><span class="rate"></span></li>
			<li>Fiche sur TricTrac : <%= link_to "#{@game.name} => TricTrac", @game.url ? @game.url : "#" %></li>
			<li>Temps d'une partie <span class="flash"><%= @game.time_average %></span></li>
			<li>Année de sortie : <span class="flash"><%= @game.publish_year %></span></li>
			<li>Un jeu de :<span class="flash"><%= authors_links(@game.authors) %></span></li>
			<li>Editeur <span class="flash"><%= @game.editor %></span></li>
			<li>Tags : <%= game_tags_links @game %></li>
		</ul>
	</div>
<% end %>
	
<div class="page-nav">
	<strong><%= link_to "Retour sur la liste des jeux", games_path %></strong>		
</div>	



<% content_for :newsbox do %>
	<% render :layout => "layouts/widget", :locals => {:title => "Statistiques"} do %>
		<span class="flash"><%= pluralize(@game.account_games.size, "membre</span> a", "membres</span> ont") %>
		ce jeu dans leurs ludotheque.
    <br />
		Nos membres ont joués un total de 
		<span class='flash'><%= pluralize(@game.parties.count, "partie</span>", "parties</span>") %> de ce jeu.
	<% end %>
	
	<% render :layout => "layouts/widget", :locals => {:title => "Ma ludotheque"} do %>
	  Vous <%= account_have_game?(@game) ? "possedez" : "ne possedez pas" %> ce jeu.<br />
	  <% if account_have_game?(@game) %>
	    <%= link_to "Supprimez #{@game.name} de ma ludotheque", game_account_game_path(@game), :method => :delete, :class => "ss_sprite ss_folder_delete" %>
	  <% else %>
	    <%= link_to "Ajoutez #{@game.name} de ma ludotheque", new_game_account_game_path(@game), :class => "ss_sprite ss_folder_add " %>
	  <% end %>
	<% end if logged_in? %>
<% end %>


<% content_for :subnav do %>
	<%= render :partial => "subnav" %>
<% end %>