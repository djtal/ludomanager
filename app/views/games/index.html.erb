
<%  content_for :page_nav do%>
    <%= will_paginate @games %>
<% end %>

<h3>Les jeux...</h3>

<div class="pagination clear">
  <span><%= link_to "Tous", games_path %></span>
    <% ("A".."Z").each do |letter| %>
      <%= link_for_first_letter letter, :games_path %>
    <% end %>
</div>

<div>
	
	<div id="games">
		<% if @games.size > 0 %>
			<%= render :partial => @games, :spacer_template => "shared/spacer" %>
		<% else %>
			Desol√©. Aucun jeux ne corespond a vos criteres.
		<% end %>
	</div>
	
</div>

<%= yield :page_nav %>


<% content_for :newsbox do %>
  <% render_widget "Administration" do %>
    <%= link_to "Ajouter un jeu", new_game_path, :class => "ss_sprite ss_joystick" %>
  <% end if logged_in? %>

  <% render_widget "Les derniers ajouts" do %>
    <ul class="strip">
      <% @last.each do |game| %>
        <li>
        	<%= image_tag(game.box.url(:thumb), :class => "mini") %>
        	<%= link_to(truncate(game.name), game_path(game), :class => "name") %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>