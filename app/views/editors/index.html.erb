<% content_for:head do %>
	<title>Les editeurs</title>
<% end %>


<h3>Les editeurs</h3>

<div class="pagination clear">
  <span><%= link_to "Tous", editors_path %></span>
    <% ("A".."Z").each do |letter| %>
      <%= link_for_first_letter letter, :editors_path %>
    <% end %>
</div>


<div>
  <% if @editors.size > 0 %>
		<%= render :partial => @editors, :spacer_template => "shared/spacer" %>
	<% else %>
		Aucun editeurs actuellement en base.
	<% end %>
</div>

<div class="page-nav">
  <%= will_paginate @editors %>
</div>


<% content_for :subnav do %>
	<%= render :partial => "subnav" %>
<% end %>