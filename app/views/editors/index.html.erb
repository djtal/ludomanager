<% content_for:head do %>
	<title>Les editeurs</title>
<% end %>


<h3>Les editeurs</h3>

<div class="pagination clear">
  <span><%= link_to "Tous", editors_path %></span>
    <% ("A".."Z").each do |letter| %>
      <%= link_for_first_letter letter, :editors_path %>
    <% end %>
</div>

<table class="sortable">
  <thead>
    <tr>
      <th class="span-1"></th>
      <th class="span-6 nosort">Nom</th>
      <th class="span-<%= logged_in? ? "8" : "10" %> nosort"></th>
      <% if logged_in? %>
        <th class="span-2 nosort">Gerer</th>
      <% end %>
      <th class="center nosort">Nb Jeux</th>

    </tr>
  </thead>
  <tbody>
    <%= render :partial => @editors %>
  </tbody>
</table>

<div class="page-nav">
  <%= will_paginate @editors %>
</div>


<% content_for :subnav do %>
	<%= render :partial => "subnav" %>
<% end %>