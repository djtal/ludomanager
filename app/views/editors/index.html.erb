<% content_for:head do %>
	<title>Les editeurs</title>
<% end %>


<h3>Les editeurs</h3>

<div class="pagination clear">
  <span><%= link_to "Tous", editors_path %></span>
    <% ("A".."Z").each do |letter| %>
      <%= link_for_first_letter letter, :editors_path %>
    <% end %>
</div>


<div>
  <% if @editors.size > 0 %>
		<%= render :partial => @editors, :spacer_template => "shared/spacer" %>
	<% else %>
		Aucun editeurs actuellement en base.
	<% end %>
</div>

<div class="page-nav">
  <%= will_paginate @editors %>
</div>


<% content_for :subnav do %>
	<%= render :partial => "subnav" %>
<% end %>

<% content_for :newsbox do %>
  <% render_widget "Dernieres activit&eacute;es" do %>
      <ul class="strip">
        <% @last_active.each do |e| %>
          <li>
            <%= image_tag(e.logo.url, :class => "mini", :size => "35x35") %><%= link_to e.name, editor_path(e) %>
          </li>
        <% end %>
      </ul>
  <% end if @last_active %>
<% end %>