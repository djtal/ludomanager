<% content_for:head do %>
	<title>Les editeurs</title>
<% end %>

<h3>Gestion des &eacute;ditions</h3>


<table class="sortable">
  <thead>
    <tr>
      <th class="span-1">Lang</th>
      <th class="span-6 nosort">Jeux</th>
      <th class="span-6">Editeur</th>
      <th class"span-2">Sortie le</th>
      <th class="span-<%= logged_in? ? "2" : "4" %> nosort"></th>
      <% if logged_in? %>
        <th class="span-2 nosort">Gerer</th>
      <% end %>

    </tr>
  </thead>
  <tbody>
    <%= render :partial => @editions %>
  </tbody>
</table>

<div class="page-nav">
  <%= will_paginate @editions %>
</div>

<% content_for :subnav do %>
	<%= render :partial => "games/subnav" %>
<% end %>
