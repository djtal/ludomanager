<tr class="autohide" id="<%= dom_id(party_full) %>">
  <td><%= game_box_for party_full.game, :class => "mini" %></td>
  <td>
    <strong><%= party_full.game.name %></strong><br />
      <% if party_full.players.size > 0 %>
        <span class="players more">
          <%= party_full.members.map(&:display_name) * ", " %>
        </span>
      <% else %>
        <span class="empty">Vous n'avez pas saisie de joueurs pour cette partie.</span>
      <% end %>
  </td>
  <td><%= party_full.players.size %> / <%= pluralize(party_full.game.max_player, "joueur", "joueurs") %></td>
  <td><div class="function">
    <% if party_full.players.size > 0 %>
      <%= link_to "", edit_party_player_path(party_full),  :class => "ss_sprite ss_group_edit"  %>|
      <%= link_to_remote "", {:url => party_path(party_full), :method => :delete},  :class => "ss_sprite ss_group_delete"  %>
    <% else %>
      <%= link_to "", new_party_player_path(party_full), :class => "ss_sprite ss_group_add" %>
    <% end %>
  </div></td>
</tr>