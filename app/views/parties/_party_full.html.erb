<tr id="<%= dom_id(party_full) %>" class="autohide">
  <td><%= image_tag(party_full.game.box.url(:thumb), :class => "mini") %></td>
  <td>
    <strong><%= party_full.game.name %></strong><br />
      <% if party_full.players.size > 0 %>
        <span class="players more">
          <%= party_full.members.map(&:display_name) * ", " %>
        </span>
      <% else %>
        <span class="empty">Vous n'avez pas saisie de joueurs pour cette partie.</span>
      <% end %>
  </td>
  <td><div class="function">
    <% if party_full.players.size > 0 %>
      <%= link_to "", edit_party_player_path(party_full, party_full.players.first),  :class => "ss_sprite ss_pencil"  %>
    <% else %>
      <%= link_to "", new_party_player_path(party_full), :class => "ss_sprite ss_add" %>
    <% end %>
    |<%= link_to_remote "", {:url => party_path(party_full), :method => :delete},  :class => "ss_sprite ss_trash"  %>
  </div></td>
  <td class="center count">
    <div class="<%= party_full.players.size == 0 ? "round empty" : ""  %>">
      <%= party_full.players.size %> / <%= party_full.game.max_player %>
    </div>
  </td>
</tr>